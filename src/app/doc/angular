-- criando telas
ng generate component favorito

ng g c lancamentos-pesquisa
ng g c navbar --spec=false

ng g c pessoas-pesquisa

ng g c lancamento-cadastro --spec=false

ng g c lancamentos-grid --spec=false


ng g c pessoas-cadastro  --spec=false

ng g c message --spec=false --inline-template --inline -style

instalar mascara na pagina com a diretiva currency-mask
npm install ng2-currency-mask --save


criando modulo
ng g m botoes
ng g m lancamentos

criando sharedModel
ng g m shared


